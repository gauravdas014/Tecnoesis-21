<body>
  <!-- partial:index.partial.html -->

    <div style='position:fixed;margin-top:-60vh;z-index: 10000;height:10vh;font-size: larger;font-weight: 400;'>
        <%- include("./partials/messages") %>
    </div>

  <div class="logo">
    <a href="/"><img src="/images/tecnoesis logo 2021xxxhdpi.png" alt=""></a>
</div>
  <% if(type == 2) { %>
    <div class="container right-panel-active" id="container">
  <% } else { %>
    <div class="container" id="container">
  <% } %>
    <div class="form-container sign-up-container">
      <form action="/user/register" method="POST">
        <h1>Create Account</h1>
        <p>Don't have an account?</p>

        <label for="name">Full name:</label>
        <input type="text" id="name" placeholder="Enter your name" name="name" required>
        <!-- <label for="pin">PIN:</label><br>
			<input type="text" id="pin" name="pin" maxlength="4" size="4"><br> -->
        <label for="email">Your Email</label>
        <input type="email" id="email" placeholder="Enter your email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
        <label for="phone">Phone:</label>
        <input type="tel" pattern="^[0-9]{10}$" placeholder="Enter your number" title="10 digit phone number" onkeypress="return onlyNumberKey(event)" id="phone" name="phone" required>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" minlength="8" required>
        <label for="password">Confirm Password</label>
        <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm password"
          minlength="8" required>
        <center><button type="submit" style="cursor: pointer">Sign Up</button></center>
      </form>

      <a href="#" id="signIn">Already have an account? Sign In</a>

    </div>
    <% if(type == 2) { %>
      <div class="form-container sign-in-container left-panel-active">
    <% } else { %>
      <div class="form-container sign-in-container">
    <% } %>
      <form action="/user/login" method="POST">
        <h1>Sign in</h1>
        <p>Welcome, We missed you!</p>

        <label for="email">Your Email</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" minlength="8" required>
        <center><button type="submit" style="cursor: pointer">Sign In</button></center>
      </form>

      <a href="#" id="signUp">Don't have an account? Sign Up</a>
      <!-- <a href="/user/forgotpassword" id="signIn">Fogot password</a> -->
    </div>
    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <div class="video">
            <img src="/images/landing/globeTwo.gif">
          </div>
          <!-- <h1>Welcome Back!</h1>

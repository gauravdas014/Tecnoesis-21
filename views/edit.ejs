<div class="row" style="margin-top:10vh;height:80vh">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      
      <h1 class="text-center mb-3" style="color:purple">
        <svg 
          xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="purple" class="bi bi-pencil-square" viewBox="0 0 16 16">
          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
        </svg>      
        Edit
      </h1>

      <%- include("./partials/messages") %>

      <form action="/user/edit/?_method=PUT" method="POST" style="height:50vh">
      
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            name="name"
            placeholder="Enter Name"
            value="<%= user.name %>"
            id="name"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= user.email %>"        
          />
        </div>
        <div class="form-group">
          <label for="phoneNo">Phone Number</label>
          <input
            type="Number"
            name="phoneNo"
            placeholder="Edit phoneNo"
            value="<%= user.phoneNo  %>"
            id="phoneNo"
            class="form-control"
          />
        </div>
      </br>
        <button
          type="submit" 
          style="background-color: rgb(0, 108, 196)"
          class="btn btn-primary btn-block">
          Edit
        </button>
      </form>
      
    </div>
  </div>
</div>
